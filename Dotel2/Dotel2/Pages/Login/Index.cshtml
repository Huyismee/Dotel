@page
@model Dotel2.Pages.Login.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="css/loginsignin.css" />
    <script src="https://kit.fontawesome.com/682f180637.js"
            crossorigin="anonymous"></script>
</head>
<body>
<section>
    <!--Bắt Đầu Phần Hình Ảnh-->
    <div class="img-bg">
        <img src="img/signinlogin.jpg">
    </div>
    <!--Kết Thúc Phần Hình Ảnh-->
    <!--Bắt Đầu Phần Nội Dung-->
    <div class="noi-dung">
        <div class="form1">
            <h2>Đăng nhập</h2>
            <form method="post" id="login">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div class="input-form">
                    <span>Email hoặc số điện thoại</span>
                    <input type="text" name="username" id="email" required>
                </div>

                <div class="input-form">
                    <span>Mật Khẩu</span>
                    <input type="password" name="password" id="password" required>
                </div>

                <div class="nho-dang-nhap">
                    <label><input type="checkbox" name=""> Lưu thông tin đăng nhập</label>
                </div>

                <div class="input-form">
                    <input style="background-color: sandybrown; color: black" type="submit" value="Đăng Nhập">
                </div>
                <div class="input-form">
                    <p><a href="forgotpassword">Quên Mật Khẩu?</a> hoặc <a href="register">Đăng Ký</a></p>
                </div>
            </form>
        </div>
    </div>
    <!--Kết Thúc Phần Nội Dung-->
</section>
</body>
</html>