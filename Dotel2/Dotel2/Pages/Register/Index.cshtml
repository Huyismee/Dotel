@page
@model Dotel2.Pages.Register.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký tài khoản</title>
    <link rel="stylesheet" href="css/loginsignin.css" />
    <script src="https://kit.fontawesome.com/682f180637.js"
            crossorigin="anonymous"></script>
</head>
<body>
<section>
    <!--Bắt Đầu Phần Hình Ảnh-->
    <div class="img-bg">
        <img src="img/signinlogin.png">
    </div>
    <!--Kết Thúc Phần Hình Ảnh-->
    <!--Bắt Đầu Phần Nội Dung-->
    <div class="noi-dung">
        <div class="form2">
            <h2>Đăng ký tài khoản</h2>
            <form method="post" id="register">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div class="input-form">
                    <span>Họ và tên</span>
                    <input type="text" name="FullName" id="name" required>
                </div>
                <div class="input-form">
                    <span>Email của bạn</span>
                    <input type="text" name="Email" id="email" required>
                </div>
                <div class="input-form">
                    <span>Số điện thoại</span>
                    <input type="text" name="Phone" id="phone" required>
                </div>

                <div class="input-form">
                    <span>Mật Khẩu</span>
                    <input type="password" name="Password" id="password" required>
                </div>

                <div class="input-form">
                    <span>Xác nhận lại mật khẩu</span>
                    <input type="password" name="RepeatPassword" id="repassword" required>
                </div>


                <div class="input-form">
                    <input style="background-color: sandybrown; color: black" type="submit" value="Đăng Ký Tài Khoản">
                </div>
                <div class="input-form">
                    <p>Đã có tài khoản?  <a href="login">Đăng Nhập</a></p>
                </div>

            </form>
        </div>
    </div>
    <!--Kết Thúc Phần Nội Dung-->
</section>
</body>
</html>