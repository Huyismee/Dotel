@page "{id:int}"
@model Dotel2.Pages.RentHomeDetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@removeTagHelper Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper , Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Shared/_Layout2";
}




<body>
    <style>
        .sub-image {
            height: 300px; /* Adjust the height as needed */
            width: 100%; /* Maintain aspect ratio */
            object-fit: cover; /* Ensure the image covers the entire container */
            margin-top: 24px;
        }</style>

   
        <!-- Hot Room start -->
        <!-- Start Properties  -->
        <section id="aa-properties">
            <div class="container">
                <div class="row">


                    <div id="info" class="col-md-8 mb-4">

                        <h1>@Model.Rental.RentalTitle</h1>
                        <img src="/@Model.Rental.RentalListImages.FirstOrDefault().Sourse" alt="@Model.Rental.RentalTitle" style="width:100%; height:700px;">
                        <br />

                        <div class="row">
                            @foreach (var image in Model.Rental.RentalListImages.Skip(1))
                            {
                                <div class="col-md-6 mb-3">
                                    <img src="/@image.Sourse" alt="Sub Image" class="img-fluid sub-image" height="150">
                                </div>
                            }
                        </div>
                        <div>
                            @foreach (var video in Model.Rental.RentalVideos)
                            {
                                <div class="col-md-6 mb-3">
                                    <video src="/@video.Sourse" alt="Property Image" controls style="max-width: 400px; max-height: 300px;"></video>
                                </div>

                            }
                        </div>
                        <p>@Model.Rental.Description</p>


                    </div>

                    <div class="col-md-4">
                        <aside class="aa-properties-sidebar">
                            <div class="aa-properties-single-sidebar">
                                <div id="contact">
                                </div>
                                <div class="aa-properties-single-sidebar">
                                    <div class="heart-btn">
                                        <div class="content">
                                        </div>
                                    </div>
                                    <br>
                                </div>


                                <div class="aa-properties-single-sidebar">
                                    <h3>Có thể bạn quan tâm</h3>


                                    <div class="media-body">
                                        <h6 class="media-right"><a href="/Index">Trở về trang thuê trọ </a></h6>
                                    </div>
                                </div>


                            </div>
                        </aside>
                    </div>

                    


                    <!-- Messenger Plugin chat Code -->
                </div>
            </div>
        </section>
        <!-- Booking End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


        <script src="~/lib/wow/wow.min.js"></script>
        <script src="~/lib/easing/easing.min.js"></script>
        <script src="~/lib/waypoints/waypoints.min.js"></script>
        <script src="~/lib/counterup/counterup.min.js"></script>
        <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="~/lib/tempusdominus/js/moment.min.js"></script>
        <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <!-- Template Javascript -->

    </div>
</body>